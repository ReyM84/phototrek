<div class="container">
<p id="notice"><%= notice %></p>

<h1 id="h1index">Hikes</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Location</th>
      <th>Difficulty</th>
      <th>Length</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hikes.each do |hike| %>
      <tr>
        <td><%= link_to hike.location, hike %></td>
        <td><%= hike.difficulty %></td>
        <td><%= hike.length %></td>
        <td><%= hike.comments %></td>
        <td><%= link_to image_tag(hike.image.url, class: "medium" ), hike %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new hike', new_hike_path %>

</div>